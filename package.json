{
    "name": "backend",
    "version": "1.0.0",
    "description": "Blog App",
    "main": "app.js",
    "scripts": {
        "start": "nodemon --experimental-modules --es-module-specifier-resolution=node app.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "cd frontend && npm run build",
        "install-client": "cd frontend && npm install",
        "heroku-postbuild": "npm run install-client && npm run build",
        "develop": "concurrently --kill-others-on-fail \"npm run app\" \"npm run start --prefix client\"",
        "server":"node app.js"
    },
    "author": "",
    "license": "ISC",
    "type": "module",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "env": "^0.0.2",
        "express": "^4.18.2",
        "mongodb": "^4.11.0",
        "mongoose": "^6.7.0",
        "nodemon": "^2.0.20",
        "path": "^0.12.7"
    }
}
